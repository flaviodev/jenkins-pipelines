pipeline {
    agent any
    tools {
        maven 'mvn3'
        jdk 'jdk8'
    }
    stages {
        stage('Git & Build') {
           steps {
               git branch: 'master', url: 'https://github.com/flaviodev/delta-rent-a-car.git'
               sh 'mvn clean package -DskipTests'
            }
        }  
        
        stage('Testes') {
           steps {
               sh 'mvn test'
            }
        }
        
        stage('Sonar') {
            steps {
                withSonarQubeEnv('sonar') {
                   sh 'mvn sonar:sonar'
               }
            }
        }   

        stage('Gerar Artefatos') {
           steps {
               sh 'mvn install'
            }
        }   

        stage('Deploy') {
           steps {
              withCredentials([sshUserPrivateKey(credentialsId: "ssh-producao", keyFileVariable: 'keyfile')]) {
                 sh 'scp -i ${keyfile} target/*.jar vagrant@172.16.0.10:/home/vagrant'
              }
           }
        }
    }
}
